  <script>
    $(document).ready(async function () {
      const users = await getData('GET', '/api/ToD');
     $('#show-users').text(JSON.stringify(users));
    });

    $('#next').click(async function (e){
      e.preventDefault();
      let name = $('#donationtype').val();
      
      const urlParams = new URLSearchParams(window.location.search);
      const userId = urlParams.get('userId');

      let payload = {
        name, 
        userId
      };
      const create = await getData('POST', '/api/ToD', payload);
      if ( create.statusCode === 200 ) {
        let userId = create.data.userId;
        window.location.href = `/donorQuery?userId=${userId}`;
      };
    });
  </script>

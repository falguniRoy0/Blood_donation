    $('#submit').click(async function (e){
      e.preventDefault();
      let name = $('#name').val();
      let bloodGroups = $('#bloodgroup').val();
      let city = $('#city').val();
      let address = $('#address').val();

      let payload = {
        name, 
        bloodGroups, 
        city,
        address, 
      };
      const create = await getData('POST', '/api/pharmacy', payload);

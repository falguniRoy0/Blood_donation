      $(document).ready(async function () {
        const users = await getData('GET', '/api/user');
       $('#show-users').text(JSON.stringify(users));
      });

      $('#signup').click(async function (e){
        e.preventDefault();
        let name = $('#name').val();
        let usertype = $('#usertype').val();
        let bloodtype = $('#bloodtype').val();
        let email = $('#email').val();
        let phonenumber = $('#phone_number').val();
        let password = $('#password').val();
        let confirmpassword = $('#confirm_password').val();
        let dateofbirth = $('#dob').val();
        let zipcode = $('#code').val();

        let payload = {
          name, 
          usertype, 
          bloodtype,
          email, 
          phonenumber, 
          password, 
          confirmpassword, 
          dateofbirth, 
          zipcode
        };

        const create = await getData('POST', '/api/auth', payload);
        if ( create.statusCode === 200 ) {
          alert('User Created!!');
          window.location.href = "/signin";
        };
      });

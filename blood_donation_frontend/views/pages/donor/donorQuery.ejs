<script>
  $(document).ready(async function () {
    const users = await getData('GET', '/api/donorQuerie');
   $('#show-users').text(JSON.stringify(users));
  });

  $('#next').click(async function (e){
    e.preventDefault();
    let gender = $('#gender').val();
    let healthIssue = $('#issue').val();
    let age = $('#age').val();
    let weight = $('#weight').val();
    let donateBefore = $('#beforeDonate').val();

    const urlParams = new URLSearchParams(window.location.search);
    const userId = urlParams.get('userId');

    let payload = {
      gender, healthIssue, age, weight, donateBefore, userId
    };
    const create = await getData('POST', '/api/donorQuerie', payload);
    if ( create.statusCode === 200) {
    alert("Now you can able to Login to enter Your Homepage!!");
      window.location.href = "/signin";
    };
  });

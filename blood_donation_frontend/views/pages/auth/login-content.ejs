<div class="d-flex flex-column flex-root">
  <!--begin::Login-->
  <div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
    <div
      class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat"
      style="background-image: url('/img/bg-3.jpg')"
    >
      <div class="login-form text-center p-7 position-relative overflow-hidden">
        <div class="d-flex flex-center mb-15">
          <a href="/">
            <img src="/img/business-logo.png" class="max-h-75px" alt="" />
          </a>
        </div>
        <div class="login-signin">
          <div class="mb-20">
            <h3>Sign In To Admin</h3>
            <div class="text-muted font-weight-bold">
              Enter your details to login to your account:
            </div>
          </div>

          <form method="POST" class="form">
            <div class="form-group">
              <div class="input-group input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"
                    ><i class="fa fa-mobile-alt text-primary mr-7"></i
                  ></span>
                </div>
                <input
                  type="tel"
                  class="form-control"
                  name="phone"
                  placeholder="Phone"
                  pattern="(^([+]{1}[8]{2}|0088)?(01){1}[3-9]{1}\d{8})$"
                  required
                  title="Please provide a phone number"
                  id="signIn-phone"
                />
              </div>
              <div
                id="error-phone"
                style="display: none; color: red; padding: 3px"
                class="float-right"
              ></div>
            </div>
            <div class="form-group">
              <div class="input-group input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-key text-primary mr-5"></i></span>
                </div>
                <input
                  type="password"
                  class="form-control"
                  pattern=".{6,}"
                  name="password"
                  placeholder="password"
                  required
                  title="Password at least 6 characters long"
                  id="signIn-password"
                />
              </div>
              <div id="error-password" style="display: none; color: red" class="float-right"></div>
            </div>

            <div class="text-center">
              <button
                type="button"
                id="signin-button"
                class="btn btn-primary font-weight-bold px-9 py-4 my-3"
              >
                <i id="hide-icon" class="icon-1x fas fa-arrow-right"></i>

                Sign In
              </button>
            </div>
          </form>
        </div>
        <!--end::Login Sign in form-->
      </div>
    </div>
  </div>
  <!--end::Login-->
</div>
